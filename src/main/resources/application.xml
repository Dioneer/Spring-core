    <bean id="connections" name="connections" class="Pegas.utils.Connections">
        <constructor-arg name="url" value="${db.url}"/>
        <constructor-arg name="userName" value="${db.username}"/>
        <constructor-arg name="password" value="${db.password}"/>
    </bean>
    <bean id="userDto" name="userDto" class="Pegas.dto.UserDTO"/>
    <bean id="companyDto" name="companyDto" class="Pegas.dto.CompanyDTO"/>
    <bean id="userMapper" name="userMapper" class="Pegas.mapper.UserMapper">
        <constructor-arg ref="userDto"/>
    </bean>
    <bean id="companyMapper" name="companyMapper" class="Pegas.mapper.CompanyMapper">
        <constructor-arg ref="companyDto"/>
    </bean>
    <bean id="userRepository" name="userRepository" class="Pegas.dao.UserRepository" init-method="init" destroy-method="destroy">
        <constructor-arg ref="connections"/>
    </bean>
    <bean id="companyRepository" name="companyRepository" class="Pegas.dao.CompanyRepository" init-method="init" destroy-method="destroy">
        <constructor-arg ref="connections"/>
    </bean>
    <bean id="userService" name="userService" class="Pegas.service.UserService">
        <constructor-arg ref="userMapper"/>
        <constructor-arg ref="userRepository"/>
    </bean>
    <bean id="companyService" name="companyService" class="Pegas.service.CompanyService">
        <constructor-arg ref="companyMapper"/>
        <constructor-arg ref="companyRepository"/>
    </bean>

</beans>